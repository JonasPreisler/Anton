<div class="container">
  <div class="row">
    <div class="col-lg-3">
    	<center>
	    	<% @projects.each do |project| %>
	       	<%= link_to project.name, project, class: 'white-link' %>
	       	<div class="white-description"><%= project.intro %></div>
	        <br />
	        <div class="box">
	          <div class="image-shadow image-container">
	            <%= image_tag project.image.url(:project_view) %>
	          </div>
	        </div>
		  	<% end %>
		  </center>
    </div>
    <div class="col-lg-9">
      <div class="card mt-4">
        <%= image_tag @project.image.url %>
        <div class="card-body">
          <h3 class="card-title"><%= @project.name %></h3>
          <h4>Category: <%= @project.service.name %></h4>
          <strong><%= @project.intro %></strong>
          <p class="card-text">
          	<%= simple_format @project.desciption %>
          </p>
        </div>
      </div>
    </div>
    <!-- /.col-lg-9 -->

  </div>

</div>
<!-- /.container -->
