<div class="row">
  <div class="only-desktop">
    <div class="col-md-6 col-sx-6 col-sm-6">
      <%= image_tag ('/rocket-building.gif') %>
    </div>
    <div class="col-md-6 col-sx-6 col-sm-6">
      <h1>You find the spacesuits</h1>
      <h3 style="color:#9a9a9a;">..while I'm building your rocket.</h3>
    </div>
  </div>


  <div class="only-mobile page-title">
    <div class="col-md-6 col-sx-6 col-sm-6">
      <center>
        <h1>You find the spacesuits</h1>
        <h3>..while I'm building your rocket.</h3>
      </center>
    </div>
    <div class="col-md-6 col-sx-6 col-sm-6">
      <%= image_tag ('/rocket-building.gif') %>
    </div>
  </div>
</div>
<center>
  <div class="grey">
    <div class="row">
      <% @services.each do |service| %>
        <div class="col-sm-6 col-md-4">
          <div class="box">
            <div class="image-shadow image-container">
              <%= link_to (image_tag service.image.url(:service)), service %>
            </div>
          </div>
          <div class="caption">
            <div class="image-text""><h3><%= link_to service.name, service, class: 'white-link' %></h3></div>
            <br />
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
